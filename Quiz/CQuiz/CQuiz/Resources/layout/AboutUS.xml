<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/drawerLayout2"
	android:fitsSystemWindows="true"
	android:background="#f0f8ff"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">


	<LinearLayout
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:textStyle="bold"
			android:layout_marginLeft="10dp"
			android:textColor="#000000"
			android:layout_marginTop="50dp"
			android:text="Огромное спасибо веб-сайтам, которые предоставили подходящий контент"
			android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
			android:textStyle="bold"
			android:layout_marginLeft="10dp"
			android:textColor="#000000"
			android:layout_marginTop="10dp"
			android:text="Ресурсы, используемые в приложении «C++ Quiz»:"
			android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

		<GridLayout
			android:layout_marginTop="10dp"
			android:layout_gravity="center"
			android:padding="16dp"
			android:rowCount="5"
			android:columnCount="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<!-- First Row -->
			<android.support.v7.widget.CardView
				android:layout_marginTop="0dp"
				android:layout_gravity="center_horizontal"
				android:layout_width="177dp"
				android:layout_height="100dp"
				app:cardElevation="2dp"
				android:layout_marginBottom="10dp">

				<LinearLayout
					android:background="#8dcaff"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical">
					<TextView
						android:gravity="center_horizontal"
						android:textStyle="bold"
						android:textColor="#000000"
						android:layout_marginTop="10dp"
						android:text="Музыкальное сопровождение"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
					<TextView
						android:autoLink="web"
						android:textColorLink="#2d2d2d"
						android:layout_marginTop="5dp"
						android:textColor="#2d2d2d"
						android:layout_gravity="center_vertical"
						android:gravity="center"
						android:text="https://www.zapsplat.com"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
					<TextView
						android:layout_marginTop="10dp"
						android:autoLink="web"
						android:textColorLink="#2d2d2d"
						android:textColor="#2d2d2d"
						android:layout_gravity="center_vertical"
						android:gravity="center"
						android:text="https://zvukipro.com "
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>

				</LinearLayout>

			</android.support.v7.widget.CardView>
			<android.support.v7.widget.CardView
				android:layout_marginTop="10dp"
				app:cardElevation="2dp"
				android:layout_marginBottom="10dp"
				android:layout_gravity="center_horizontal"
				android:layout_width="177dp"
				android:layout_height="100dp">

				<LinearLayout
					 android:background="#8dcaff"
					 android:id="@+id/SecondQuiz"
					 android:layout_width="match_parent"
				     android:layout_height="match_parent"
				   	 android:orientation="vertical">
					<TextView
						android:gravity="center_horizontal"
						android:textStyle="bold"
						android:textColor="#000000"
						android:layout_marginTop="10dp"
						android:text="Рисунки и изображения:"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
					<TextView
						android:autoLink="web"
						android:textColorLink="#2d2d2d"
						android:layout_marginTop="5dp"
						android:textColor="#2d2d2d"
						android:layout_gravity="center_vertical"
						android:gravity="center"
						android:text="https://ru.pngtree.com"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
					<TextView
						android:layout_marginTop="10dp"
						android:autoLink="web"
						android:textColorLink="#2d2d2d"
						android:textColor="#2d2d2d"
						android:layout_gravity="center_vertical"
						android:gravity="center"
						android:text="https://ru.freepik.com"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>

				</LinearLayout>

			</android.support.v7.widget.CardView>

		</GridLayout>

		<LinearLayout
			android:gravity="end"
			android:orientation="horizontal"
			android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

			<ImageView
				android:id="@+id/imageInst"
				android:src="@drawable/inst1"
				android:layout_width="70dp"
				android:layout_height="70dp"/>

			<TextView
				android:gravity="center"
				android:textColor="#000000"
				android:autoLink="web"
				android:id="@+id/textInst"
				android:layout_marginTop="0dp"
				android:text="Подпишись на наш instagram и следи за нашими объявлениями и обновлениями"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

		</LinearLayout>
	</LinearLayout>


	
</android.support.v4.widget.DrawerLayout>